@model IndexModel
@{
    var isAvatarSpecified = Model.Input.Avatar != null && Model.Input.Avatar.Length > 0;
    var initImgSrcValur = isAvatarSpecified ?
        $"data:{Model.Input.AvatarFileType};base64,{Convert.ToBase64String(Model.Input.Avatar)}" :
        "";
}

