            <div class="title">Upload</div>
                <div class="image">
                    <img id="avatarImg" src="@initImgSrcValur" alt="" />
                </div>
        </div>
        <input asp-for="Input.Avatar" id="avatarInput" type="file" accept=".png,.jpg,.jpeg,.svg" />
